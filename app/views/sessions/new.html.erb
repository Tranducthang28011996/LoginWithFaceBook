	</head>
	<body>
		<div class="col-sm-4" style="margin-left: 427px;margin-top: 50px">
			<div class="rcol-md-offset-3">
				<div class="main-login main-center">
				<h1>Sign In</h1>
					<%= form_for(:session , url: login_path) do |f|  %>	

						<div class="form-group">
							<label for="email" class="cols-sm-2 control-label">Your Email</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
								
									<%= f.text_field :email, class: "form-control", id: "email" %>
								</div>
							</div>
						</div>

						

						<div class="form-group">
							<label for="password" class="cols-sm-2 control-label">Password</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
									<%= f.password_field :password, class: "form-control" ,id: "password" %>
								</div>
							</div>
							<br />
						<div class="form-group ">
						<%= f.submit "Signup", class: "btn btn-primary btn-lg btn-block login-button" %>

						</div>
						<p>or</p>

						<div class="form-group">
							 <%= link_to "Login with FaceBook","auth/facebook", class: "btn btn-primary btn-lg" %>
						</div>
						
			
					<% end %>
				</div>
			</div>
		</div>

		 <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
