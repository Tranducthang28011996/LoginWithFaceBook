<div class="container">
  <h1>Categories</h1>
       
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Created at</th>
        <th>Actions</th>
      </tr>
    </thead>
    <% @category.each do |category| %>
    <tbody>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.created_at %></td>
        <td>
          <%= link_to "Edit", edit_category_path(category), method: :get, 
            class: "btn btn-info" %>
          <%= link_to "Delete", delete_categories_path(category), method: :delete, data:{confirm: 'Are you sure?'}, class: "btn btn-warning" %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>

  <%= link_to "New Categorie", categories_new_path , class: "btn btn-info"%>
</div>

